<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="com.example.bodyboost.Feed_classes.feedFragment"
        android:label="fragment_feed"
        tools:layout="@layout/fragment_feed" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.bodyboost.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nutricionFragment"
        android:name="com.example.bodyboost.nutricionFragment"
        android:label="fragment_nutricion"
        tools:layout="@layout/fragment_nutricion" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.bodyboost.Report_classes.ReportFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_report" />

    <fragment
        android:id="@+id/daysFragment"
        android:name="com.example.bodyboost.Exercise_classes.DaysFragment"
        android:label="fragment_days"
        tools:layout="@layout/fragment_days" >
        <action
            android:id="@+id/action_DaysFragment_to_exerciseFragment"
            app:destination="@id/exerciseFragment" />
    </fragment>

    <fragment
        android:id="@+id/logInFragment"
        android:name="com.example.bodyboost.logInFragment"
        android:label="fragment_logIn"
        tools:layout="@layout/activity_login" />
    <fragment
        android:id="@+id/exerciseFragment"
        android:name="com.example.bodyboost.ExerciseFragment"
        android:label="fragment_exercise"
        tools:layout="@layout/fragment_exercise" >
        <argument
            android:name="ExerciseDay"
            app:argType="integer" />
    </fragment>
</navigation>